<Window x:Class="M59AdminTool.Views.ImagePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:services="clr-namespace:M59AdminTool.Services"
        Title="{services:Loc Window_ImagePreview_Title}" Height="720" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Background="#1E1E1E">
        <Border Margin="10" Background="#2C2C2C" BorderBrush="#444" BorderThickness="1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Image x:Name="PreviewImage" Stretch="None" Margin="10"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
