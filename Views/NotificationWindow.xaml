        ResizeMode="NoResize">
    <Border Background="#DD000000"
            BorderBrush="#FF00FF00"
            BorderThickness="2"
            CornerRadius="8"
            Padding="15">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="âš¡"
                       FontSize="24"
                       Foreground="#FF00FF00"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <TextBlock x:Name="MessageText"
                       FontSize="14"
                       Foreground="White"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</Window>
