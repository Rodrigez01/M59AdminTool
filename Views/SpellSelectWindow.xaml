<Window x:Class="M59AdminTool.Views.SpellSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:services="clr-namespace:M59AdminTool.Services"
        Title="{services:Loc Window_SpellSelect_Title}" Height="420" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{services:Loc Label_Spell}" Margin="0,0,0,6" FontWeight="SemiBold"/>

        <ComboBox x:Name="SpellComboBox"
                  Grid.Row="1"
                  IsEditable="True"
                  IsTextSearchEnabled="True"
                  DisplayMemberPath="DisplayName"
                  VerticalAlignment="Stretch"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="{services:Loc Button_Ok}" Width="80" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="{services:Loc Button_Cancel}" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
