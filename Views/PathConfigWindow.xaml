<Window x:Class="M59AdminTool.Views.PathConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Konfiguration"
        Height="240"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Server Root:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="ServerRootPathBox" Grid.Row="0" Grid.Column="1" Margin="0,0,8,8" Padding="6"/>
        <Button Grid.Row="0" Grid.Column="2" Content="..." Width="30" Margin="0,0,0,8" Click="BrowseServerRoot_Click"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="KOD Pfad:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="KodPathBox" Grid.Row="1" Grid.Column="1" Margin="0,0,8,8" Padding="6"/>
        <Button Grid.Row="1" Grid.Column="2" Content="..." Width="30" Margin="0,0,0,8" Click="BrowseKodPath_Click"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Foreground="#666" TextWrapping="Wrap"
                   Text="Hinweis: Server Root zeigt auf den Server-Ordner (z.B. Server-104-main). KOD Pfad ist optional und wird sonst automatisch auf ServerRoot\kod gesetzt."/>

        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Speichern" Width="110" Margin="0,0,8,0" Click="Save_Click"/>
            <Button Content="Abbrechen" Width="110" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
