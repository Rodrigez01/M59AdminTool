<Window x:Class="M59AdminTool.Views.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:services="clr-namespace:M59AdminTool.Services"
        Title="{services:Loc Window_Error_Title}" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#2C3E50">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="{services:Loc Header_ErrorOccurred}"
                   FontSize="20" FontWeight="Bold"
                   Foreground="White" Margin="0,0,0,15"/>

        <!-- Error Text (Copyable) -->
        <Border Grid.Row="1" Background="#34495E" BorderBrush="#7F8C8D" BorderThickness="1" CornerRadius="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="ErrorTextBox"
                         Text="{Binding ErrorText, Mode=OneWay}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         Background="Transparent"
                         Foreground="#ECF0F1"
                         BorderThickness="0"
                         Padding="10"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="{services:Loc Button_Copy}" Width="100" Height="35" Margin="0,0,10,0"
                    Background="#3498DB" Foreground="White"
                    BorderThickness="0" FontWeight="Bold"
                    Click="CopyButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="{services:Loc Button_Close}" Width="100" Height="35"
                    Background="#E74C3C" Foreground="White"
                    BorderThickness="0" FontWeight="Bold"
                    Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
