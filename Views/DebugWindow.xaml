<Window x:Class="M59AdminTool.Views.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:services="clr-namespace:M59AdminTool.Services"
        Title="{services:Loc Window_DebugLog_Title}" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="{services:Loc Header_DebugLog}"
                       FontSize="20" FontWeight="Bold"
                       Foreground="#61DAFB" VerticalAlignment="Center"/>
            <TextBlock x:Name="MessageCountText" Text="{services:Loc Label_MessageCount}"
                       FontSize="14" Foreground="#95A5A6"
                       Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Log Display -->
        <Border Grid.Row="1" Background="#252526" BorderBrush="#3E3E42" BorderThickness="2" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Auto-scrolling ListBox -->
                <ListBox x:Name="LogListBox"
                         ItemsSource="{Binding Messages}"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="#D4D4D4"
                         FontFamily="Consolas"
                         FontSize="11"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Padding="10"
                         SelectionMode="Extended">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="2"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#D4D4D4"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#094771"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <!-- Status Bar -->
                <Border Grid.Row="1" Background="#007ACC" Padding="5">
                    <TextBlock x:Name="StatusText" Text="{services:Loc Label_DebugStatus}"
                               Foreground="White" FontSize="10"/>
                </Border>
            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <CheckBox x:Name="AutoScrollCheckBox" Content="{services:Loc Checkbox_AutoScroll}"
                      IsChecked="True" Foreground="White" VerticalAlignment="Center"
                      Margin="0,0,15,0" Checked="AutoScrollCheckBox_Changed" Unchecked="AutoScrollCheckBox_Changed"/>

            <Button Content="{services:Loc Button_CopyAll}" Width="130" Height="35" Margin="0,0,10,0"
                    Background="#2ECC71" Foreground="White"
                    BorderThickness="0" FontWeight="Bold"
                    Click="CopyAllButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#27AE60"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="{services:Loc Button_Clear}" Width="100" Height="35" Margin="0,0,10,0"
                    Background="#E67E22" Foreground="White"
                    BorderThickness="0" FontWeight="Bold"
                    Click="ClearButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D35400"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="{services:Loc Button_Close}" Width="100" Height="35"
                    Background="#E74C3C" Foreground="White"
                    BorderThickness="0" FontWeight="Bold"
                    Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
